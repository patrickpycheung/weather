    <munit:config name="cities-normal-case.xml" />
    <munit:test name="get:\cities:weather-api-config-countryName-boundary-min-200-application\json-FlowTest" description="Verifying functionality of [get:\cities:weather-api-config-200-application\json]">
        <munit:enable-flow-sources>
            <munit:enable-flow-source value="weather-api-main" />
            <munit:enable-flow-source value="get:\cities:weather-api-config" />
        </munit:enable-flow-sources>
        <munit:execution>
            <http:request config-ref="Weather_API_HTTP_Request_Configuration" method="GET" path="/cities">
                <http:headers><![CDATA[#[{"Accept":"application/json"}]]]></http:headers>
                <http:query-params><![CDATA[#[{"CountryName":"a"}]]]></http:query-params>
            </http:request>
        </munit:execution>
        <munit:validation>
            <munit-tools:assert-that expression="#[attributes.statusCode]" is="#[MunitTools::equalTo(200)]" message="The HTTP Status code is not correct!" doc:name="Assert That Status Code is 200" />
            <munit-tools:assert-that expression="#[output application/java ---write(payload, 'application/json') as String]" is="#[MunitTools::equalTo(MunitTools::getResourceAsString('sample_data/getCitiesByCountryOrganizedResponse.json'))]" message="The response payload is not correct!" doc:name="Assert That - Payload is Expected" />
        </munit:validation>
    </munit:test>
